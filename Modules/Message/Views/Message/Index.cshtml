@using Easy.Data
@using Easy.CMS.Message.Models
@{

}
@if (Authorizer.Authorize(Easy.CMS.Message.PermissionKeys.ManageMessage))
{
    <div id="toolBar">
        <a href="@Url.Action("Create")" class="btn btn-primary btn-xs">新建</a>
    </div>
}
@(
 Html.Grid<MessageEntity>().SetColumnTemplate(col => {
     col.Add(m => m.Title, "<a href='"+Url.Action("Edit")+"/{ID}'>{Title}</a>");
 }).SetAsToolBar("#toolBar").ShowCheckbox(m=>m.ID).OrderBy(m=>m.CreateDate, OrderType.Descending)
)

