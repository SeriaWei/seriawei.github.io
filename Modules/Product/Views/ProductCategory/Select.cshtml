@using Easy.ViewPort.jsTree
@using Easy.Web.CMS.Product.Models
@{
    ViewBag.Title = "选择产品类别";
    Script.Reqiured("jsTree").AtFoot();
}


@(
 Html.Tree<ProductCategory>().Source("GetProductCategoryTree", "ProductCategory", new { module = "admin" }).On(Events.SelectNode, "Select").On(Events.Loaded, "loaded")
)
@using (Script.AtFoot())
{
    <script type="text/javascript">
        function Select(node, selected, e) {
            Set(selected.node.a_attr.ID);
        }
        function loaded() {
            @if (ViewBag.Selected != null)
        {
<text>
            $("a[id=@(ViewBag.Selected)]").click();
            </text>
        }
        }
    </script>
}
