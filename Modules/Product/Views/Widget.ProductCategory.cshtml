@using System.Text.RegularExpressions
@model Easy.CMS.Product.ViewModel.ProductCategoryWidgetViewModel

<div class="product-category">
    <div class="list-group">
        @foreach (var item in Model.Categorys)
        {
            <a href="@Url.AddQueryToCurrentUrl("pc",item.ID.ToString())" class="list-group-item @(item.ID == Model.CurrentCategory ? "active" : "")">
                @item.Title
            </a>
        }
    </div>
</div>
