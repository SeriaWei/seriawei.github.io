@using Easy.Data
@model Easy.Web.CMS.Setting.ApplicationSetting

@if (Authorizer.Authorize(Easy.CMS.Common.PermissionKeys.ManageApplicationSetting))
{
    <div id="toolBar">
        <a href="@Url.Action("Create")" class="btn btn-primary btn-xs">新建</a>
    </div>
}
@(
 Html.Grid().SetColumnTemplate(col =>
 {
     col.Add(m => m.SettingKey, "<a href='" + Url.Action("Edit") + "/{SettingKey}'>{SettingKey}</a>");
 }).SetAsToolBar("#toolBar").ShowCheckbox(m => m.SettingKey).OrderBy(m => m.SettingKey, OrderType.Ascending)
)
