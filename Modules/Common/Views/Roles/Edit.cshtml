@using Easy.Modules.Role
@model Easy.Modules.Role.RoleEntity
@{
    Script.Reqiured("validate").AtFoot();
}
<div class="panel panel-default">
    <div class="panel-heading">
        编辑
    </div>
    <div class="panel-body">
        <form method="post" action="@Url.Action("Edit")" enctype="multipart/form-data">
            @Html.EditorForModel()
            <hr />
            @Html.Partial("Partal.Permissions", Model.Permissions ?? new List<Permission>())
            <div class="toolBar">
                <input type="submit" class="btn btn-primary" value="保存" data-value="@ActionType.Update" />
                <input type="button" class="btn btn-default cancel" value="取消" />
            </div>
        </form>
    </div>
</div>