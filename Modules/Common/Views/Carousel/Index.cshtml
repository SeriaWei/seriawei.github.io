@using Easy.Data
@model Easy.CMS.Common.Models.CarouselEntity

@if (Authorizer.Authorize(Easy.CMS.Common.PermissionKeys.ManageCarousel))
{
    <div id="toolBar">
        <a href="@Url.Action("Create")" class="btn btn-primary btn-xs">新建</a>
    </div>
}
@(
 Html.Grid().SetColumnTemplate(col =>
 {
     col.Add(m => m.Title, "<a href='" + Url.Action("Edit") + "/{ID}'>{Title}</a>");
 }).SetAsToolBar("#toolBar").ShowCheckbox(m => m.ID).OrderBy(m => m.ID, OrderType.Descending)
)
