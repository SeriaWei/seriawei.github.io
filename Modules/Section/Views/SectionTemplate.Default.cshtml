@using System.Linq
@using Easy.CMS.Section
@using Easy.CMS.Section.Models
@model SectionGroup

<div class="section-group-default">
    @foreach (SectionContent content in Model.SectionContents.OrderBy(m => m.Order))
    {
        if (content.SectionContentType == (int)SectionContent.Types.CallToAction || content.SectionContentType == (int)SectionContent.Types.Image)
        {
            <p>
                @{
            Html.RenderContent(content);
                }
            </p>
        }
        else
        {
            Html.RenderContent(content);
        }
    }
</div>
